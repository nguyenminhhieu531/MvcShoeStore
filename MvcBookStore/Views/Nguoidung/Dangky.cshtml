
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutDangky.cshtml";
}

<link href="~/Content/assets/web/css/style.css" rel="stylesheet" />
<link href="~/Content/assets/web/css/font-awesome.css" rel="stylesheet" />
<link href="//fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

<style>
    .left{
        float:left;
    }

    input {
        width: 100%;
        margin-bottom: 30px;
    }

    .register {
        margin: auto;
        margin-top: 20px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        display: block;
    }

    .login input[type="Email"], .login input[type="password"] {
        margin: -2px 0px 30px 0px !important;
    }
</style>

<div class="login-form w3_form" style="margin-top: 40px;">
    <div class="login w3_login">
        <table align="center" class="w3l_grid" style="width: 100%; margin-top: 40px;">
            <h2 class="login-header w3_header">ĐĂNG KÝ</h2>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr >
                    <td class="left">Họ & tên</td>
                    <td class="right">
                        @Html.TextBox("HotenKH")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Tên đăng nhập</td>
                    <td class="right">
                        @Html.TextBox("TenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Mật khẩu</td>
                    <td class="right">
                        @Html.Password("Matkhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Nhập lại mật khẩu</td>
                    <td class="right">
                        @Html.Password("NhaplaiMK")
                        @ViewData["Loi4"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Email</td>
                    <td class="right">
                        @Html.TextBox("Email")
                        @ViewData["Loi5"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Địa chỉ</td>
                    <td class="right">
                        @Html.TextBox("Diachi")
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Số điện thoại</td>
                    <td class="right">
                        @Html.TextBox("Dienthoai")
                        @ViewData["Loi7"]
                    </td>
                </tr>
                <tr >
                    <td class="left">Ngày sinh</td>
                    <td class="right">
                        <input type="date" name="Ngaysinh" />
                    </td>
                </tr>
                <tr >
                    <td></td>
                    <td class="register">
                        <input type="Submit" value="Đăng ký" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>




