@using MvcBookStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<GIAY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSanPham.cshtml";
}

<style>

    .wrapper{
        margin-top: 30px;
        margin-bottom: 40px;
    }

    .thumbnail {
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: 8px;
    }

        .thumbnail img {
            position: relative;
            transition: all 0.8s ease 0s;
        }

            .thumbnail img:hover {
                transform: scale(1.2);
            }

    .MenuTrang {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
    }

        .MenuTrang li {
            display: inline;
        }

    #lht1:hover {

    }
</style>

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="container">
        <div class="row">
            @foreach (var giay in Model)
            {
                <div class="col-xs-12 col-md-4">
                    <div class="thumbnail" id="lht1">
                        <a href="@Url.Action("Details","ShopGiay",new { id = giay.MaGiay})">
                            <img alt="@giay.TenGiay" src="~/Hinhsanpham/@giay.Anhbia" width="200" />
                        </a>
                        <div>
                            <br />
                            <h4 style="text-align:center">
                                @giay.TenGiay
                            </h4>
                            <p></p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Sanpham", new { page = page }))
            </div>
        </div>
    </div>
</div>




